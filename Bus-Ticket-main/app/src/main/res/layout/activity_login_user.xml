<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUser"
    android:background="@color/white">

    <ImageView
        android:id="@+id/loBookNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/booknow" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loBookNow"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="332dp"
        android:text="Email"
        android:textSize="18dp"
        android:textColor="@color/warna21"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tvEmail"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/ed_border"
        android:hint="Enter your Email"
        android:paddingLeft="25dp"
        android:textColorHint="@color/warna5"
        android:textColor="@color/warna2"
        android:textStyle="bold"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/userEmail"
        android:textSize="18dp"
        android:textColor="@color/warna21"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tvPassword"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:hint="Enter your Password"
        android:paddingLeft="25dp"
        android:textColorHint="@color/warna5"
        android:textColor="@color/warna2"
        android:textSize="13dp"
        android:textStyle="bold"
        android:background="@drawable/ed_border" />

    <Button
        android:id="@+id/btnLoginuser"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/userPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/warna21"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/warna6"
        android:textSize="16dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginuser"
        app:srcCompat="@drawable/or"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSignUpuser"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/imOr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/warna5"
        android:text="SignUp"
        android:textAllCaps="false"
        android:textColor="@color/warna21"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>